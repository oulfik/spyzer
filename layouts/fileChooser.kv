

<FileViewer>:
    cols: 2
    spacing:"10dp"
    size_hint: 1, None
    height: "50dp"
    Button:
        size_hint: 1, None
        height: "30dp"
        text: 'Open'
        on_release: root.show_load()
    Label:
        size_hint: 1, None
        height: "30dp"
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        text: root.attached_label


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            filters: root.filters
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
