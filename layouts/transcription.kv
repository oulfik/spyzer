
<Transcription>:
    padding:"10dp"
    orientation:"vertical"
    Label:
        id: model_label
        text:"Step 1"
    ModelChooser:
        attached_label: "Select model folder"
        popup_title: "Select model folder"
        filter_files: ['']
        allow_dir_selection: True
    Label:
        id: speech_label
        text:"Step 2"
    SpeechChooser:
        attached_label: "Select folder with speech files."
        popup_title: "Select folder with speech files"
        filter_files: ['']
        allow_dir_selection: True
    Label:
        id: results_label
        text:"Step 3"
    ResultsChooser:
        attached_label: "Select folder for the transcription results."
        popup_title: "Select folder for vosk results"
        filter_files: ['']
        allow_dir_selection: True
    Label:
        text:"Final"
    Button:
        id: start_btn
        size_hint: 1, None
        height: "50dp"
        on_press:root.schedule_transcription()
        text:"Start transcription"
