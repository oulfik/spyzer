#:import audio_analysis audio_analysis
#:import transcription transcription
#:import diarization diarization
#:import navigation_screen_manager navigation_screen_manager
#:import boxlayout_with_action_bar boxlayout_with_action_bar



<MainMenu@GridLayout>:
    cols: 2
    padding: "10dp"
    spacing: "10dp"
    Button:
        text: "Audio analysis"
        on_press: app.manager.push("AudioAnalysis")
    Label:
        padding_x: "10dp"
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text:"Select an audio file and compute different audio features, create plots and more."
    Button:
        text: "Transcription"
        on_press: app.manager.push("Transcription")
    Label:
        padding_x: "10dp"
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text:"Automatical transcription of speech files. Various languages are supported."
    Button:
        text: "Diarization"
        on_press: app.manager.push("Diarization")
    Label:
        padding_x: "10dp"
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text:"Answers the question who speaks and when. Create a speaker plot or segment speech audio files."


<MyScreenManager>:
    Screen:
        name: "MainMenu"
        MainMenu:
    Screen:
        name: "AudioAnalysis"
        BoxLayoutWithActionBar:
            title: "Audio analysis"
            AudioAnalysisTabs:
    Screen:
        name: "Transcription"
        BoxLayoutWithActionBar:
            title: "Transcription"
            Transcription:
    Screen:
        name: "Diarization"
        BoxLayoutWithActionBar:
            title: "Diarization"
            Diarization:




