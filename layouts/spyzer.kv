#:import librosa_features librosa_features
#:import widget_examples widget_examples
#:import navigation_screen_manager navigation_screen_manager
#:import boxlayout_with_action_bar boxlayout_with_action_bar



<MainMenu@GridLayout>:
    cols: 2
    padding: "10dp"
    spacing: "10dp"
    Button:
        text: "Librosa"
        on_press: app.manager.push("LayoutExamplesTabs")
    Label:
        padding_x: "10dp"
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text:"Librosa functionality. View the audio files in the time domain, compute audio features and more."
    Button:
        text: "Vosk"
        on_press: app.manager.push("WidgetsExample")
    Label:
        padding_x: "10dp"
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text:"Enables transcription of speech files. Various languages are supported."
    # Button:
    #     text: "Images"
    #     on_press: app.manager.push("ImagesExample")



<MyScreenManager>:
    Screen:
        name: "MainMenu"
        MainMenu:
    Screen:
        name: "LayoutExamplesTabs"
        BoxLayoutWithActionBar:
            title: "Librosa"
            LayoutExamplesTabs:
    Screen:
        name: "WidgetsExample"
        BoxLayoutWithActionBar:
            title: "Vosk"
            WidgetsExample:
    Screen:
        name: "ImagesExample"
        BoxLayoutWithActionBar:
            title: "Images"
            ImagesExample:




